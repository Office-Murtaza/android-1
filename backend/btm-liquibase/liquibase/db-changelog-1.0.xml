<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="init" author="roman.berla">
        <createTable tableName="users">
            <column name="user_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="create_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column defaultValue="CURRENT_TIMESTAMP_ON_UPDATE"
                    name="update_date"
                    type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(20)">
                <constraints nullable="false" />
            </column>
            <column name="phone_confirmed" type="number" defaultValueNumeric="0">
                <constraints nullable="false" />
            </column>
            <column name="password" type="varchar(100)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="code_verifications">
            <column name="code_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="create_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column defaultValue="CURRENT_TIMESTAMP_ON_UPDATE"
                    name="update_date"
                    type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int"/>
            <column name="phone" type="varchar(20)">
            </column>
            <column name="code" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="code_confirmed" type="number" defaultValueNumeric="0">
                <constraints nullable="false" />
            </column>

        </createTable>

        <modifySql dbms="mysql">
            <regExpReplace replace="'CURRENT_TIMESTAMP_ON_UPDATE'" with="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP"/>
            <append value=" engine innodb" />
        </modifySql>
    </changeSet>


</databaseChangeLog>