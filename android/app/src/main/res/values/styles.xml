<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox" parent="Widget.Design.TextInputLayout" />

    <style name="Widget.MaterialComponents.TextInputEditText.FilledBox" parent="Widget.Design.TextInputLayout" tools:ignore="PrivateResource" />

    <style name="SeedElemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_quoter</item>
        <item name="android:layout_marginEnd">@dimen/margin_quoter</item>
        <item name="android:background">@drawable/seed_gray_rounded_corner</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/margin_half</item>
        <item name="android:paddingTop">@dimen/margin_quoter</item>
        <item name="android:paddingEnd">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_quoter</item>
    </style>

    <style name="SeedElemHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray_text_color</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SeedElemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">30dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="KeyboardButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_bg_hollow_non_stroke</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:paddingTop">@dimen/margin_quoter</item>
        <item name="android:paddingBottom">@dimen/margin_quoter</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingStart">@dimen/margin_x3</item>
        <item name="android:paddingEnd">@dimen/margin_x3</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TransactionButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">@dimen/margin_main</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/bt_transaction_rounded_corner</item>
        <item name="android:backgroundTint">@color/blue_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/dark_gray_text_color</item>
        <item name="colorControlNormal">@color/dark_gray_text_color</item>
    </style>

    <style name="CoinDetails" />

    <style name="CoinDetails.Table" />

    <style name="CoinDetails.Table.Row">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="CoinDetails.Table.Key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#8d8d8d</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="CoinDetails.Table.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#58585a</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="PinScreen" />

    <style name="PinScreen.KeyboardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>


    <style name="VerificationInfoScreen" />

    <style name="VerificationInfoScreen.Key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">#58585a</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="VerificationInfoScreen.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

    <style name="VerificationInfoScreen.Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">#d9d9d9</item>
    </style>

    <style name="VerificationBlankScreen" />

    <style name="VerificationBlankScreen.EditTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>

    </style>

    <style name="VerificationBlankScreen.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#8d8d8d</item>
        <item name="android:lines">1</item>
    </style>


    <style name="TransactionsScreen" />

    <style name="TransactionsScreen.ChartRadioButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_chart_period</item>
        <item name="android:textColor">@color/selector_chart_period_text</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TransactionsScreen.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundColor">@color/selector_bg_chips</item>
        <item name="android:textColor">@color/selector_text_chips</item>
    </style>

    <style name="TransactionsScreen.FloatingActionButtonChild" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/blue_color</item>
        <item name="fab_colorPressed">@color/blue_color</item>
        <item name="fab_size">mini</item>
    </style>


    <style name="WalletTab" />

    <style name="WalletTab.Title" />

    <style name="WalletTab.Title.Medium" />

    <style name="WalletTab.Title.Medium.Key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WalletTab.Title.Medium.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#8d8d8d</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="WalletTab.EditText" />

    <style name="WalletTab.EditText.Container" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="WalletTab.EditText.InputWithMax">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">54dp</item>
    </style>

    <style name="WalletTab.EditText.TextLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#0073e4</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
