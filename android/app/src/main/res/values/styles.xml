<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeedElemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_quoter</item>
        <item name="android:layout_marginEnd">@dimen/margin_quoter</item>
        <item name="android:background">@drawable/seed_gray_rounded_corner</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/margin_half</item>
        <item name="android:paddingTop">@dimen/margin_quoter</item>
        <item name="android:paddingEnd">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_quoter</item>
    </style>

    <style name="SeedElemHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray_text_color</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SeedElemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">30dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="KeyboardButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_bg_hollow_non_stroke</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:paddingTop">@dimen/margin_quoter</item>
        <item name="android:paddingBottom">@dimen/margin_quoter</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingStart">@dimen/margin_x3</item>
        <item name="android:paddingEnd">@dimen/margin_x3</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TransactionButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">@dimen/margin_main</item>
        <item name="android:layout_marginTop">@dimen/margin_x2</item>
        <item name="android:background">@drawable/bt_transaction_rounded_corner</item>
        <item name="android:backgroundTint">@color/blue_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
