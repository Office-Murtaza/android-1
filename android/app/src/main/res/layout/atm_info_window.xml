<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_main"
        android:paddingTop="@dimen/margin_half"
        android:paddingEnd="@dimen/margin_main"
        android:paddingBottom="@dimen/margin_half">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            app:fontFamily="@font/poppins_medium" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atm_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:textColor="@color/light_gray_text_color"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_quoter"
            android:layout_marginBottom="@dimen/margin_quoter"
            android:text="@string/open_now"
            android:textColor="@color/gray_text_color"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_semi_bold" />

        <LinearLayout
            android:id="@+id/atm_open_hours_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>