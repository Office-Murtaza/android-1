<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.settings.phone.ShowPhoneActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/exchange_coin_to_coin_screen_title" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/priceBarrierView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="balanceTitleView,priceTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceTitleView"
        style="@style/WalletTab.Title.Medium.Key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/exchange_coin_to_coin_screen_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceUsdView"
        style="@style/WalletTab.Title.Medium.Value"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/priceBarrierView"
        app:layout_constraintTop_toTopOf="@id/priceTitleView"
        tools:text="2525.31 USD" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceTitleView"
        style="@style/WalletTab.Title.Medium.Key"
        android:text="@string/exchange_coin_to_coin_screen_balance"
        app:layout_constraintStart_toStartOf="@id/priceTitleView"
        app:layout_constraintTop_toBottomOf="@id/priceTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceCryptoView"
        style="@style/WalletTab.Title.Medium.Value"
        app:layout_constraintStart_toEndOf="@id/priceBarrierView"
        app:layout_constraintStart_toStartOf="@id/priceUsdView"
        app:layout_constraintTop_toTopOf="@id/balanceTitleView"
        tools:text="0.000902 BTC" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/exchangeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/balanceCryptoView"
        app:layout_constraintEnd_toStartOf="@id/balanceUsdView"
        app:layout_constraintStart_toEndOf="@id/balanceCryptoView"
        app:layout_constraintTop_toTopOf="@id/balanceCryptoView"
        app:srcCompat="@drawable/ic_compare_arrows" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceUsdView"
        style="@style/WalletTab.Title.Medium.Value"
        android:layout_marginStart="8dp"
        android:textColor="@color/blue_color"
        app:layout_constraintBottom_toBottomOf="@id/exchangeView"
        app:layout_constraintStart_toEndOf="@id/exchangeView"
        app:layout_constraintTop_toTopOf="@id/exchangeView"
        tools:text="8.90 USD" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountCoinFromView"
        style="@style/WalletTab.EditText.Container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balanceTitleView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:digits="1234567890."
            android:inputType="numberDecimal"
            android:nextFocusDown="@id/amountUsdView"
            tools:hint="@string/exchange_coin_to_coin_screen_crypto_amount"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/maxCoinFromView"
        style="@style/WalletTab.EditText.TextLink"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/max"
        app:layout_constraintBottom_toBottomOf="@id/amountCoinFromView"
        app:layout_constraintEnd_toEndOf="@id/amountCoinFromView"
        app:layout_constraintTop_toTopOf="@id/amountCoinFromView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pickCoinButtonView"
        style="@style/WalletTab.EditText.Container"
        app:layout_constraintEnd_toEndOf="@id/amountCoinFromView"
        app:layout_constraintStart_toStartOf="@id/amountCoinFromView"
        app:layout_constraintTop_toBottomOf="@id/amountCoinFromView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:paddingEnd="12dp"
            tools:hint="@string/exchange_coin_to_coin_screen_select_coin"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountCoinToView"
        style="@style/WalletTab.EditText.Container"
        app:layout_constraintEnd_toEndOf="@id/pickCoinButtonView"
        app:layout_constraintStart_toStartOf="@id/pickCoinButtonView"
        app:layout_constraintTop_toBottomOf="@id/pickCoinButtonView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:digits="1234567890."
            android:focusableInTouchMode="false"
            android:hint="@string/exchange_coin_to_coin_screen_crypto_amount"
            android:inputType="numberDecimal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textAllCaps="true"
            tools:ignore="RtlSymmetry" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButtonView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/button_next"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amountCoinToView" />

    <FrameLayout
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_progress"
        android:clickable="true"
        android:elevation="15dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarView">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>