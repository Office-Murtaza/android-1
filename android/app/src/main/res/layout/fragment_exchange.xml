<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/priceBarrierView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="balanceTitleView,priceTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceTitleView"
        style="@style/Transaction.Title.Medium.Key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/exchange_coin_to_coin_screen_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceUsdView"
        style="@style/Transaction.Title.Medium.Value"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/priceBarrierView"
        app:layout_constraintTop_toTopOf="@id/priceTitleView"
        tools:text="2525.31 USD" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceTitleView"
        style="@style/Transaction.Title.Medium.Key"
        android:text="@string/exchange_coin_to_coin_screen_balance"
        app:layout_constraintStart_toStartOf="@id/priceTitleView"
        app:layout_constraintTop_toBottomOf="@id/priceTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceCryptoView"
        style="@style/Transaction.Title.Medium.Value"
        app:layout_constraintStart_toEndOf="@id/priceBarrierView"
        app:layout_constraintStart_toStartOf="@id/priceUsdView"
        app:layout_constraintTop_toTopOf="@id/balanceTitleView"
        tools:text="0.000902 BTC" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/exchangeView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/balanceCryptoView"
        app:layout_constraintEnd_toStartOf="@id/balanceUsdView"
        app:layout_constraintStart_toEndOf="@id/balanceCryptoView"
        app:layout_constraintTop_toTopOf="@id/balanceCryptoView"
        app:srcCompat="@drawable/ic_compare_arrows" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceUsdView"
        style="@style/Transaction.Title.Medium.Value"
        android:layout_marginStart="8dp"
        android:textColor="@color/blue_color"
        app:layout_constraintBottom_toBottomOf="@id/exchangeView"
        app:layout_constraintStart_toEndOf="@id/exchangeView"
        app:layout_constraintTop_toTopOf="@id/exchangeView"
        tools:text="8.90 $" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountCoinFromView"
        style="@style/TextInputLayoutOutline"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balanceTitleView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/EditText.InputWithMax"
            android:digits="1234567890."
            android:inputType="numberDecimal"
            android:nextFocusDown="@id/amountUsdView"
            tools:hint="@string/text_amount" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/maxCoinFromView"
        style="@style/EditText.TextLink"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/max"
        app:layout_constraintBottom_toBottomOf="@id/amountCoinFromView"
        app:layout_constraintEnd_toEndOf="@id/amountCoinFromView"
        app:layout_constraintTop_toTopOf="@id/amountCoinFromView" />

    <TextView
        android:id="@+id/amountCoinToView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0.00 $"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/amountCoinFromView"
        app:layout_constraintTop_toBottomOf="@id/amountCoinFromView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pickCoinButtonView"
        style="@style/TextInputLayoutOutline"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/amountCoinFromView"
        app:layout_constraintStart_toStartOf="@id/amountCoinFromView"
        app:layout_constraintTop_toBottomOf="@id/amountCoinToView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/EditText.InputWithMax"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawablePadding="8dp"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:paddingEnd="12dp"
            tools:drawableStart="@drawable/ic_center_focus"
            tools:hint="@string/exchange_coin_to_coin_screen_select_coin"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/balanceCoinToView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/spaceView"
        app:layout_constraintEnd_toEndOf="@id/pickCoinButtonView"
        app:layout_constraintTop_toBottomOf="@id/pickCoinButtonView" />

    <Space
        android:id="@+id/spaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/nextButtonView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balanceCoinToView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButtonView"
        style="@style/Button.Primary"
        android:enabled="false"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceView" />

</androidx.constraintlayout.widget.ConstraintLayout>