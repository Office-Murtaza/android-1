<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:id="@+id/keyboardClickView"
        android:clickable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="@string/verification_id_scan"
                android:textColor="#58585a"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbarView" />

            <TextView
                android:id="@+id/photoErrorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_validation_text"
                android:layout_gravity="center"
                android:visibility="gone"
                android:textColor="#e02d2d" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imageContainer"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/margin_main"
                android:backgroundTint="#ebf4fd"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="center" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/selectImageButtonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:background="@drawable/white_round_bg"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_add" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/removeImageButtonView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:background="@drawable/white_round_bg"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_clear_mark" />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idNumberView"
                style="@style/VerificationBlankScreen.EditTextContainer">

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/VerificationBlankScreen.EditText"
                    android:hint="@string/verification_id_number"
                    android:inputType="text"
                    android:maxLength="9"
                    android:nextFocusDown="@id/firstNameView" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameView"
                style="@style/VerificationBlankScreen.EditTextContainer">

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/VerificationBlankScreen.EditText"
                    android:hint="@string/verification_first_name"
                    android:inputType="textPersonName"
                    android:nextFocusDown="@id/lastNameView" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameView"
                style="@style/VerificationBlankScreen.EditTextContainer">

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/VerificationBlankScreen.EditText"
                    android:hint="@string/verification_last_name"
                    android:inputType="textPersonName"
                    android:nextFocusDown="@id/addressView" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addressView"
                style="@style/VerificationBlankScreen.EditTextContainer">

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/VerificationBlankScreen.EditText"
                    android:hint="@string/verification_address"
                    android:imeOptions="actionDone"
                    android:inputType="textPostalAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/countryView"
                style="@style/VerificationBlankScreen.EditTextContainer">

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/VerificationBlankScreen.EditText"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:focusableInTouchMode="false"
                    android:hint="@string/verification_country"
                    android:inputType="textPostalAddress"
                    android:nextFocusDown="@id/provinceView" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/provinceView"
                style="@style/VerificationBlankScreen.EditTextContainer">

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/VerificationBlankScreen.EditText"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:focusableInTouchMode="false"
                    android:hint="@string/verification_province"
                    android:inputType="textPostalAddress"
                    android:nextFocusDown="@id/zipCodeView"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cityView"
                style="@style/VerificationBlankScreen.EditTextContainer">

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/VerificationBlankScreen.EditText"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:focusableInTouchMode="false"
                    android:hint="@string/verification_city"
                    android:inputType="textPostalAddress"
                    android:nextFocusDown="@id/countryView"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/zipCodeView"
                style="@style/VerificationBlankScreen.EditTextContainer">

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/VerificationBlankScreen.EditText"
                    android:hint="@string/verification_zip_code"
                    android:inputType="number"
                    android:maxLength="5" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/verifyButtonView"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:text="@string/verification_send"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/messageView" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
