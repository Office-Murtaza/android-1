<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.main.settings.phone.ShowPhoneActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:navigationIcon="@drawable/gph_ic_back"
        tools:title="Send Gift BTC" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/priceBarrierView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="balanceTitleView,priceTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceTitleView"
        style="@style/WalletTab.Title.Medium.Key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/send_gift_screen_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceUsdView"
        style="@style/WalletTab.Title.Medium.Value"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/priceBarrierView"
        app:layout_constraintTop_toTopOf="@id/priceTitleView"
        tools:text="2525.31 USD" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceTitleView"
        style="@style/WalletTab.Title.Medium.Key"
        android:text="@string/send_gift_screen_balance"
        app:layout_constraintStart_toStartOf="@id/priceTitleView"
        app:layout_constraintTop_toBottomOf="@id/priceTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceCryptoView"
        style="@style/WalletTab.Title.Medium.Value"
        app:layout_constraintEnd_toStartOf="@id/exchangeView"
        app:layout_constraintStart_toStartOf="@id/priceUsdView"
        app:layout_constraintTop_toTopOf="@id/balanceTitleView"
        tools:text="0.000902 BTC" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/exchangeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/balanceCryptoView"
        app:layout_constraintEnd_toStartOf="@id/balanceUsdView"
        app:layout_constraintStart_toEndOf="@id/balanceCryptoView"
        app:layout_constraintTop_toTopOf="@id/balanceCryptoView"
        app:srcCompat="@drawable/ic_compare_arrows" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceUsdView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/blue_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/exchangeView"
        app:layout_constraintStart_toEndOf="@id/exchangeView"
        app:layout_constraintTop_toTopOf="@id/exchangeView"
        tools:text="8.90 USD" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/phonePickerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5.5dp"
        android:background="@drawable/bg_stroke_gray"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingTop="8dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8.5dp"
        app:ccp_arrowColor="#58585a"
        app:ccp_autoFormatNumber="true"
        app:ccp_contentColor="#58585a"
        app:ccp_defaultNameCode="US"
        app:ccp_showFlag="false"
        app:ccp_showNameCode="false"
        app:ccp_textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/phoneView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneView"
        style="@style/WalletTab.EditText.Container"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/phonePickerView"
        app:layout_constraintTop_toBottomOf="@id/balanceTitleView">

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:hint="@string/send_gift_screen_recipient_address"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pastePhoneView"
        style="@style/WalletTab.EditText.TextLink"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/paste"
        app:layout_constraintBottom_toBottomOf="@id/phoneView"
        app:layout_constraintEnd_toEndOf="@id/phoneView"
        app:layout_constraintTop_toTopOf="@id/phoneView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountCryptoView"
        style="@style/WalletTab.EditText.Container"
        app:layout_constraintEnd_toEndOf="@id/phoneView"
        app:layout_constraintStart_toStartOf="@id/phonePickerView"
        app:layout_constraintTop_toBottomOf="@id/phoneView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:digits="1234567890."
            android:inputType="numberDecimal"
            android:nextFocusDown="@id/amountUsdView"
            tools:hint="@string/send_gift_screen_crypto_amount"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/maxCryptoView"
        style="@style/WalletTab.EditText.TextLink"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/max"
        app:layout_constraintBottom_toBottomOf="@id/amountCryptoView"
        app:layout_constraintEnd_toEndOf="@id/amountCryptoView"
        app:layout_constraintTop_toTopOf="@id/amountCryptoView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountUsdView"
        style="@style/WalletTab.EditText.Container"
        app:layout_constraintEnd_toEndOf="@id/amountCryptoView"
        app:layout_constraintStart_toStartOf="@id/amountCryptoView"
        app:layout_constraintTop_toBottomOf="@id/amountCryptoView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:digits="1234567890."
            android:enabled="false"
            android:focusableInTouchMode="false"
            android:hint="@string/send_gift_screen_usd_amount"
            android:inputType="numberDecimal"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            tools:ignore="RtlSymmetry" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/maxUsdView"
        style="@style/WalletTab.EditText.TextLink"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/max"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/amountUsdView"
        app:layout_constraintEnd_toEndOf="@id/amountUsdView"
        app:layout_constraintTop_toTopOf="@id/amountUsdView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/gifContainerView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#efefef"
        app:layout_constraintStart_toStartOf="@id/amountUsdView"
        app:layout_constraintTop_toBottomOf="@id/amountUsdView">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/gifEmptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_gift_box" />

        <com.giphy.sdk.ui.views.GifView
            android:id="@+id/gifView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:gphKeepGifRatio="true" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addGifButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/send_gift_screen_add"
        android:textColor="@color/blue_color"
        app:layout_constraintStart_toStartOf="@id/gifContainerView"
        app:layout_constraintTop_toBottomOf="@id/gifContainerView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/removeGifButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/send_gift_screen_remove"
        android:textColor="@color/blue_color"
        app:layout_constraintEnd_toEndOf="@id/gifContainerView"
        app:layout_constraintTop_toTopOf="@id/addGifButtonView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/messageView"
        style="@style/WalletTab.EditText.Container"
        android:layout_width="0dp"
        android:layout_height="106dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="@id/amountUsdView"
        app:layout_constraintStart_toEndOf="@id/gifContainerView"
        app:layout_constraintTop_toBottomOf="@id/amountUsdView">

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:layout_height="match_parent"
            android:gravity="start|top"
            android:hint="@string/send_gift_screen_message"
            android:inputType="textMultiLine"
            android:maxLength="160" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButtonView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/button_next"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addGifButtonView" />

    <FrameLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_progress"
        android:clickable="true"
        android:elevation="15dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balanceTitleView">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>