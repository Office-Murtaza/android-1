<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="6dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/add_edit_trade_screen_title_create" />

    <com.app.belcobtm.presentation.core.views.InterceptableFrameLayout
        android:id="@+id/interceptableFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.main.settings.phone.ShowPhoneActivity">

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/price_barrier_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="end"
                    app:constraint_referenced_ids="balance_title_view,price_title_view,reserved_title_view,i_want_to_title_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/price_title_view"
                    style="@style/Transaction.Title.Medium.Key"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/add_edit_trade_screen_price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/price_usd_view"
                    style="@style/Transaction.Title.Medium.Value"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/price_barrier_view"
                    app:layout_constraintTop_toTopOf="@id/price_title_view"
                    tools:text="2525.31 USD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/balance_title_view"
                    style="@style/Transaction.Title.Medium.Key"
                    android:text="@string/add_edit_trade_screen_balance"
                    app:layout_constraintStart_toStartOf="@id/price_title_view"
                    app:layout_constraintTop_toBottomOf="@id/price_title_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/balance_crypto_view"
                    style="@style/Transaction.Title.Medium.Value"
                    app:layout_constraintStart_toStartOf="@id/price_usd_view"
                    app:layout_constraintTop_toTopOf="@id/balance_title_view"
                    tools:text="0.000902 BTC" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/balance_exchange_view"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/balance_crypto_view"
                    app:layout_constraintEnd_toStartOf="@id/balance_usd_view"
                    app:layout_constraintStart_toEndOf="@id/balance_crypto_view"
                    app:layout_constraintTop_toTopOf="@id/balance_crypto_view"
                    app:srcCompat="@drawable/ic_compare_arrows" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/balance_usd_view"
                    style="@style/Transaction.Title.Medium.Value"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/blue_color"
                    app:layout_constraintBottom_toBottomOf="@id/balance_exchange_view"
                    app:layout_constraintStart_toEndOf="@id/balance_exchange_view"
                    app:layout_constraintTop_toTopOf="@id/balance_exchange_view"
                    tools:text="8.90 USD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/reserved_title_view"
                    style="@style/Transaction.Title.Medium.Key"
                    android:text="@string/add_edit_trade_screen_reserved"
                    app:layout_constraintStart_toStartOf="@id/balance_title_view"
                    app:layout_constraintTop_toBottomOf="@id/balance_title_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/reserved_crypto_view"
                    style="@style/Transaction.Title.Medium.Value"
                    app:layout_constraintStart_toStartOf="@id/balance_crypto_view"
                    app:layout_constraintTop_toTopOf="@id/reserved_title_view"
                    tools:text="0.000902 BTC" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/reserved_exchange_view"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/reserved_crypto_view"
                    app:layout_constraintEnd_toStartOf="@id/reserved_usd_view"
                    app:layout_constraintStart_toEndOf="@id/reserved_crypto_view"
                    app:layout_constraintTop_toTopOf="@id/reserved_crypto_view"
                    app:srcCompat="@drawable/ic_compare_arrows" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/reserved_usd_view"
                    style="@style/Transaction.Title.Medium.Value"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/blue_color"
                    app:layout_constraintBottom_toBottomOf="@id/reserved_exchange_view"
                    app:layout_constraintStart_toEndOf="@id/reserved_exchange_view"
                    app:layout_constraintTop_toTopOf="@id/reserved_exchange_view"
                    tools:text="8.90 USD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/i_want_to_title_view"
                    style="@style/Transaction.Title.Medium.Key"
                    android:text="@string/add_edit_trade_screen_i_want_to"
                    app:layout_constraintStart_toStartOf="@id/reserved_title_view"
                    app:layout_constraintTop_toBottomOf="@id/reserved_title_view" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:checkedButton="@id/buy_button_view"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/i_want_to_title_view"
                    app:layout_constraintStart_toStartOf="@id/price_barrier_view"
                    app:layout_constraintTop_toTopOf="@id/i_want_to_title_view">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/buy_button_view"
                        style="@style/Transaction.Title.Medium.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="8dp"
                        android:text="@string/add_edit_trade_screen_buy" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/sell_button_view"
                        style="@style/Transaction.Title.Medium.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="8dp"
                        android:text="@string/add_edit_trade_screen_sell" />
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/payment_method_view"
                    style="@style/TextInputLayoutOutline"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/i_want_to_title_view">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/add_edit_trade_screen_payment_method"
                        android:inputType="text"
                        android:nextFocusDown="@id/margin_view"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/margin_view"
                    style="@style/TextInputLayoutOutline"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/payment_method_view">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="1234567890."
                        android:drawableEnd="@drawable/ic_percent"
                        android:hint="@string/add_edit_trade_screen_margin"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@id/min_limit_view"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/min_limit_view"
                    style="@style/TextInputLayoutOutline"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/margin_view">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="1234567890"
                        android:hint="@string/add_edit_trade_screen_min_limit"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:nextFocusDown="@id/max_limit_view"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/max_limit_view"
                    style="@style/TextInputLayoutOutline"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/min_limit_view">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="1234567890"
                        android:hint="@string/add_edit_trade_screen_max_limit"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:nextFocusDown="@id/trade_terms_view"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/trade_terms_view"
                    style="@style/TextInputLayoutOutline"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/max_limit_view">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="@string/add_edit_trade_screen_trade_terms"
                        android:inputType="textMultiLine"
                        android:maxLength="255"
                        android:minLines="3" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/create_button_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/create"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trade_terms_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_progress"
            android:clickable="true"
            android:elevation="15dp"
            android:focusable="true"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />
        </FrameLayout>

    </com.app.belcobtm.presentation.core.views.InterceptableFrameLayout>

</LinearLayout>
