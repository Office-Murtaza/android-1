<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_half"
    android:layout_marginEnd="@dimen/margin_half"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_main">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/coin_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_bit_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/coin_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_main"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Bitcoin"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_bold" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/coin_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg_show_hide"
            android:button="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/margin_main"
            android:paddingTop="@dimen/margin_quoter"
            android:paddingEnd="@dimen/margin_main"
            android:paddingBottom="@dimen/margin_quoter"
            android:text="@string/hide"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:fontFamily="@font/poppins_bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_x3"
        android:layout_marginEnd="@dimen/margin_x3"
        android:layout_marginBottom="@dimen/margin_half"
        android:background="@color/light_gray_text_color" />

</androidx.appcompat.widget.LinearLayoutCompat>