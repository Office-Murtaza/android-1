<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_main"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="@string/verification_id_selfie"
        android:textColor="#58585a"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarView" />

    <TextView
        android:id="@+id/photoErrorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selfie_validation_text"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textColor="#e02d2d" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageContainer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/margin_main"
        android:backgroundTint="#ebf4fd"
        app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="center" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/selectImageButtonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:background="@drawable/white_round_bg"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_add" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/removeImageButtonView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:background="@drawable/white_round_bg"
            android:tint="@color/colorPrimary"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_clear_mark" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/snnView"
        style="@style/VerificationBlankScreen.EditTextContainer">

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/VerificationBlankScreen.EditText"
            android:hint="@string/verification_snn"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="9" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyButtonView"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/verification_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messageView" />
</androidx.appcompat.widget.LinearLayoutCompat>
