<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.auth.welcome.WelcomeActivity">

    <FrameLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_progress"
        android:clickable="true"
        android:elevation="15dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />
    </FrameLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_auth" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_x4"
        android:text="@string/seed_phrase"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/yellow_divider"
        android:layout_width="30dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/margin_main"
        android:layout_marginBottom="@dimen/margin_x2"
        android:background="@drawable/bt_orange_rounded_corner"
        app:layout_constraintBottom_toTopOf="@id/card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_text" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_x2"
        android:layout_marginEnd="@dimen/margin_x2"
        android:layout_marginBottom="@dimen/margin_x2"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yellow_divider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_quoter"
            android:paddingStart="@dimen/margin_quoter"
            android:paddingTop="@dimen/margin_half">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/seed_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_x2"
                android:gravity="center"
                android:text="@string/paste_seed_info"
                android:textSize="16sp"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/word_1_container"
                style="@style/SeedElemContainer"
                app:layout_constraintBottom_toBottomOf="@id/word_2_container"
                app:layout_constraintEnd_toStartOf="@+id/word_2_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/word_2_container">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SeedElemHint"
                    android:text="1 " />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/word_1"
                    style="@style/SeedElemText"
                    android:nextFocusDown="@id/word_2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/word_2_container"
                style="@style/SeedElemContainer"
                android:layout_marginTop="@dimen/margin_main"
                app:layout_constraintEnd_toStartOf="@id/word_3_container"
                app:layout_constraintStart_toEndOf="@id/word_1_container"
                app:layout_constraintTop_toBottomOf="@id/seed_info">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SeedElemHint"
                    android:text="2 " />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/word_2"
                    style="@style/SeedElemText"
                    android:nextFocusDown="@id/word_3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/word_3_container"
                style="@style/SeedElemContainer"
                app:layout_constraintBottom_toBottomOf="@id/word_2_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/word_2_container"
                app:layout_constraintTop_toTopOf="@id/word_2_container">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SeedElemHint"
                    android:text="3 " />

                <androidx.appcompat.widget.AppCompatEditText
