                    android:nextFocusDown="@id/word_9"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/word_9_container"
                style="@style/SeedElemContainer"
                app:layout_constraintBottom_toBottomOf="@id/word_8_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/word_8_container"
                app:layout_constraintTop_toTopOf="@id/word_8_container">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SeedElemHint"
                    android:text="9 " />

                <androidx.appcompat.widget.AppCompatEditText
