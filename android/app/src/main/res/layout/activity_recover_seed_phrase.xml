            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/paste_seed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_main"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/paste"
                android:textColor="@color/blue_color"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/word_11_container" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_x4"
                android:layout_marginEnd="@dimen/margin_x4"
                android:layout_marginBottom="@dimen/margin_x2"
                android:background="@drawable/bt_gray_rounded_corner"
                android:backgroundTint="@color/blue_color"
                android:text="@string/next"
                android:textColor="@android:color/white"
                app:fontFamily="@font/poppins_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
