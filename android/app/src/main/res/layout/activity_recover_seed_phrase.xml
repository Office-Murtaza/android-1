                app:layout_constraintTop_toTopOf="@id/word_11_container">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SeedElemHint"
                    android:text="12 " />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/word_12"
                    style="@style/SeedElemText"
                    android:nextFocusDown="@id/bt_done"/>
