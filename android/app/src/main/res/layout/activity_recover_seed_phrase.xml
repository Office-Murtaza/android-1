                    android:nextFocusDown="@id/word_10"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/word_10_container"
                style="@style/SeedElemContainer"
                app:layout_constraintBottom_toBottomOf="@id/word_11_container"
                app:layout_constraintEnd_toStartOf="@id/word_11_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/word_11_container">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SeedElemHint"
                    android:text="10 " />

                <androidx.appcompat.widget.AppCompatEditText
