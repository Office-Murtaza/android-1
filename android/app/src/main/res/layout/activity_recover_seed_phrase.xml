                style="@style/SeedElemContainer"
                android:layout_marginTop="@dimen/margin_half"
                app:layout_constraintEnd_toStartOf="@id/word_12_container"
                app:layout_constraintStart_toEndOf="@id/word_10_container"
                app:layout_constraintTop_toBottomOf="@id/word_8_container">

                <androidx.appcompat.widget.AppCompatTextView
