                style="@style/SeedElemContainer"
                android:layout_marginTop="@dimen/margin_half"
                app:layout_constraintEnd_toStartOf="@id/word_9_container"
                app:layout_constraintStart_toEndOf="@id/word_7_container"
                app:layout_constraintTop_toBottomOf="@id/word_5_container">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SeedElemHint"
                    android:text="8 " />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/word_8"
