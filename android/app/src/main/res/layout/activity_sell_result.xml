<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_progress"
        android:clickable="true"
        android:elevation="15dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_container">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />
    </FrameLayout>


    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/containerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="86dp"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/oneLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="1."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/twoLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="2."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstStepLabel3" />

            <TextView
                android:id="@+id/threeLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="3."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondStepLabel3" />

            <TextView
                android:id="@+id/fourLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="4."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thirdStepLabel3" />


            <TextView
                android:id="@+id/firstStepLabel3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Wait a few minutes before your payment is confirmed. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/oneLabel3" />

            <TextView
                android:id="@+id/secondStepLabel3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="You will receive an SMS when cash withdrawal is ready. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/twoLabel3" />


            <TextView
                android:id="@+id/thirdStepLabel3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="On the ATM choose REDEEM TICKET. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/threeLabel3" />


            <TextView
                android:id="@+id/firthStepLabel3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Scan QR code from transaction details popup. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/fourLabel3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="42dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qrCodeIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.3sp"
                android:text="Address"
                android:textColor="#8d8d8d"
                android:textSize="13.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/qrCodeIv" />

            <TextView
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="-4sp"
                android:textColor="#58585a"
                android:textSize="13.9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressLabel"
                tools:text="272jfkfpfdkepori903ir" />

            <Button
                android:id="@+id/copyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Copy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressTv" />

            <TextView
                android:id="@+id/amountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8.8sp"
                android:textColor="#58585a"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/copyBtn"
                tools:text="1.00 BTC" />

            <TextView
                android:id="@+id/oneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="1."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amountTv" />

            <TextView
                android:id="@+id/twoLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="2."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstStepLabel" />

            <TextView
                android:id="@+id/threeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="3."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/secondStepLabel" />

            <TextView
                android:id="@+id/fourLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="4."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thirdStepLabel" />


            <TextView
                android:id="@+id/firstStepLabel"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Please send this exact amount by scanning QR code above or the payment will be reject."
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/oneLabel" />

            <TextView
                android:id="@+id/secondStepLabel"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Wait a few minutes before your payment is confirmed. You will receive an SMS when cash withdrawal is ready. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/twoLabel2" />


            <TextView
                android:id="@+id/thirdStepLabel"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="On the ATM choose REDEEM TICKET. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/threeLabel" />


            <TextView
                android:id="@+id/firthStepLabel"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Scan QR code from transaction details popup. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/fourLabel" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="42dp" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_main"
        android:background="@drawable/bt_gray_rounded_corner"
        android:backgroundTint="@color/bt_gray"
        android:text="@string/cancel"
        android:textColor="@color/dark_gray_text_color"
        app:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerInfo" />


</androidx.constraintlayout.widget.ConstraintLayout>