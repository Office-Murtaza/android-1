<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.main.settings.phone.ShowPhoneActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:navigationIcon="@drawable/gph_ic_back"
        tools:title="Sell" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/sellContainerGroupView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="txLimitView,balanceTitleView,dayLimitTitleView,anotherAddressButtonView,nextButtonView,txLimitTitleView,priceUsdView,exchangeView,amountCryptoView,priceTitleView,amountUsdView,balanceCryptoView,dayLimitView,priceBarrierView,balanceUsdView" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/priceBarrierView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="balanceTitleView,priceTitleView,dayLimitTitleView,txLimitTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceTitleView"
        style="@style/WalletTab.Title.Medium.Key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/sell_screen_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceUsdView"
        style="@style/WalletTab.Title.Medium.Value"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/priceBarrierView"
        app:layout_constraintTop_toTopOf="@id/priceTitleView"
        tools:text="2525.31 USD" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceTitleView"
        style="@style/WalletTab.Title.Medium.Key"
        android:text="@string/sell_screen_balance"
        app:layout_constraintStart_toStartOf="@id/priceTitleView"
        app:layout_constraintTop_toBottomOf="@id/priceTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceCryptoView"
        style="@style/WalletTab.Title.Medium.Value"
        app:layout_constraintStart_toStartOf="@id/priceUsdView"
        app:layout_constraintTop_toTopOf="@id/balanceTitleView"
        tools:text="0.000902 BTC" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/exchangeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/balanceCryptoView"
        app:layout_constraintEnd_toStartOf="@id/balanceUsdView"
        app:layout_constraintStart_toEndOf="@id/balanceCryptoView"
        app:layout_constraintTop_toTopOf="@id/balanceCryptoView"
        app:srcCompat="@drawable/ic_compare_arrows" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balanceUsdView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/blue_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/exchangeView"
        app:layout_constraintStart_toEndOf="@id/exchangeView"
        app:layout_constraintTop_toTopOf="@id/exchangeView"
        tools:text="8.90 USD" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dayLimitTitleView"
        style="@style/WalletTab.Title.Medium.Key"
        android:text="@string/sell_screen_daily_limit"
        app:layout_constraintStart_toStartOf="@id/balanceTitleView"
        app:layout_constraintTop_toBottomOf="@id/balanceTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dayLimitView"
        style="@style/WalletTab.Title.Medium.Value"
        app:layout_constraintStart_toStartOf="@id/balanceCryptoView"
        app:layout_constraintTop_toTopOf="@id/dayLimitTitleView"
        tools:text="900 USD" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txLimitTitleView"
        style="@style/WalletTab.Title.Medium.Key"
        android:text="@string/sell_screen_tx_limit"
        app:layout_constraintStart_toStartOf="@id/dayLimitTitleView"
        app:layout_constraintTop_toBottomOf="@id/dayLimitTitleView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txLimitView"
        style="@style/WalletTab.Title.Medium.Value"
        app:layout_constraintStart_toStartOf="@id/dayLimitView"
        app:layout_constraintTop_toTopOf="@id/txLimitTitleView"
        tools:text="20 USD" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountUsdView"
        style="@style/WalletTab.EditText.Container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txLimitTitleView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:digits="1234567890"
            android:inputType="number"
            android:hint="@string/sell_screen_usd_amount"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/maxUsdView"
        style="@style/WalletTab.EditText.TextLink"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/max"
        app:layout_constraintBottom_toBottomOf="@id/amountUsdView"
        app:layout_constraintEnd_toEndOf="@id/amountUsdView"
        app:layout_constraintTop_toTopOf="@id/amountUsdView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountCryptoView"
        style="@style/WalletTab.EditText.Container"
        app:layout_constraintEnd_toEndOf="@id/amountUsdView"
        app:layout_constraintStart_toStartOf="@id/amountUsdView"
        app:layout_constraintTop_toBottomOf="@id/amountUsdView">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/WalletTab.EditText.InputWithMax"
            android:digits="1234567890."
            android:inputType="numberDecimal"
            android:focusableInTouchMode="false"
            tools:hint="@string/sell_screen_crypto_amount"
            tools:ignore="RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/anotherAddressButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/sell_screen_sell_from_another_address"
        android:textColor="#8d8d8d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amountCryptoView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButtonView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/button_next"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anotherAddressButtonView" />

    <FrameLayout
        android:id="@+id/resultContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txLimitTitleView"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/resultOwnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="86dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/oneLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="1."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/twoLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="2."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstStepLabel3" />

            <TextView
                android:id="@+id/threeLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="3."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondStepLabel3" />

            <TextView
                android:id="@+id/fourLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="4."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thirdStepLabel3" />


            <TextView
                android:id="@+id/firstStepLabel3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Wait a few minutes before your payment is confirmed. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/oneLabel3" />

            <TextView
                android:id="@+id/secondStepLabel3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="You will receive an SMS when cash withdrawal is ready. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/twoLabel3" />


            <TextView
                android:id="@+id/thirdStepLabel3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="On the ATM choose REDEEM TICKET. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/threeLabel3" />


            <TextView
                android:id="@+id/firthStepLabel3"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Scan QR code from transaction details popup. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/fourLabel3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="42dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/resultAnotherAddressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:visibility="gone">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/qrCodeIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.3sp"
                android:text="Address"
                android:textColor="#8d8d8d"
                android:textSize="13.5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/qrCodeIv" />

            <TextView
                android:id="@+id/addressTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_horizontal"
                android:textColor="#58585a"
                android:textSize="13.9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressLabel"
                tools:text="272jfkfpfdkepori903ir" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/copyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text="Copy"
                android:textColor="@color/blue_color"
                app:fontFamily="@font/poppins_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressTv" />


            <TextView
                android:id="@+id/amountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8.8sp"
                android:textColor="#58585a"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/copyBtn"
                tools:text="1.00 BTC" />

            <TextView
                android:id="@+id/oneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="1."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amountTv" />

            <TextView
                android:id="@+id/twoLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="2."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstStepLabel" />

            <TextView
                android:id="@+id/threeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="3."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/secondStepLabel" />

            <TextView
                android:id="@+id/fourLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10.6sp"
                android:text="4."
                android:textColor="#0073e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thirdStepLabel" />


            <TextView
                android:id="@+id/firstStepLabel"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Please send this exact amount by scanning QR code above or the payment will be reject."
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/oneLabel" />

            <TextView
                android:id="@+id/secondStepLabel"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Wait a few minutes before your payment is confirmed. You will receive an SMS when cash withdrawal is ready. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/twoLabel2" />


            <TextView
                android:id="@+id/thirdStepLabel"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="On the ATM choose REDEEM TICKET. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/threeLabel" />


            <TextView
                android:id="@+id/firthStepLabel"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10.6sp"
                android:maxLines="4"
                android:text="Scan QR code from transaction details popup. "
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/fourLabel" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="42dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/doneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="@dimen/margin_main"
            android:background="@drawable/bt_gray_rounded_corner"
            android:backgroundTint="@color/blue_color"
            android:foreground="?attr/selectableItemBackground"
            android:paddingStart="@dimen/margin_x3"
            android:paddingEnd="@dimen/margin_x3"
            android:text="Done"
            android:textColor="@android:color/white"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_progress"
        android:clickable="true"
        android:elevation="15dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarView">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>