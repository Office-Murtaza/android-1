<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".presentation.features.authorization.welcome.WelcomeActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_x2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_text"
        app:srcCompat="@drawable/bg_auth" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_half"
        android:text="@string/logo_text"
        android:textColor="@color/gray_text_color"
        app:fontFamily="@font/poppins_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pagerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_x2"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/pagerIndicatorView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_text" />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/pagerIndicatorView"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="@dimen/margin_half"
        app:layout_constraintBottom_toTopOf="@id/card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pagerView" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_x2"
        android:layout_marginEnd="@dimen/margin_x2"
        android:layout_marginBottom="@dimen/margin_main"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@id/contactSupportButtonView">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_x2"
            android:paddingTop="@dimen/margin_main"
            android:paddingEnd="@dimen/margin_x2"
            android:paddingBottom="@dimen/margin_half">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/createWalletButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half"
                android:background="@drawable/bt_orange_rounded_corner"
                android:text="@string/create_a_new_wallet"
                android:textColor="@android:color/white"
                app:fontFamily="@font/poppins_bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recoverWalletButtonView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_main"
                android:background="@drawable/bt_gray_rounded_corner"
                android:backgroundTint="@color/bt_gray"
                android:text="@string/recover_my_wallet"
                android:textColor="@color/dark_gray_text_color"
                app:fontFamily="@font/poppins_bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/termsToggleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/accept"
                    android:textColor="@color/gray_text_color"
                    android:textSize="12sp"
                    app:buttonTint="@color/blue_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/termsLinkView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/terms"
                    android:textColor="@color/blue_color"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_regular" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/contactSupportButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_main"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/contact_support"
        android:textColor="@color/gray_text_color"
        app:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:textAllCaps="true" />


</androidx.constraintlayout.widget.ConstraintLayout>