<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="BottomNavigationMenuTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button" />

    <style name="Button.Primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#0073e4</item>
    </style>

    <style name="Button.Secondary.NoOutlined" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0073e4</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/bg_blue</item>
    </style>

    <style name="Button.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/selector_bg_chips</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:textAlignment">center</item>
        <item name="chipStrokeColor">@color/light_gray_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/selector_text_chips</item>
    </style>

    <style name="Button.PinCodeKeyboard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Text" />

    <style name="Text.Status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_status_complete</item>
        <item name="android:textColor">@color/mainGreen</item>
    </style>

    <style name="Text.Bold1">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Text.Regular1">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Text.Regular2">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Text.Regular3">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Regular4">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Head1">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SwapAmountTextAppearance" parent="Text.Regular1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText" />

    <style name="EditText.InputWithMax">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">54dp</item>
    </style>

    <style name="EditText.TextLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#0073e4</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox" parent="Widget.Design.TextInputLayout" />

    <style name="Widget.MaterialComponents.TextInputEditText.FilledBox" parent="Widget.Design.TextInputLayout" tools:ignore="PrivateResource" />

    <style name="TabLayoutTextStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SeedElemContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_quoter</item>
        <item name="android:layout_marginEnd">@dimen/margin_quoter</item>
        <item name="android:background">@drawable/seed_gray_rounded_corner</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/margin_half</item>
        <item name="android:paddingTop">@dimen/margin_quoter</item>
        <item name="android:paddingEnd">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_quoter</item>
    </style>

    <style name="SeedElemHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray_text_color</item>
    </style>

    <style name="SeedElemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:minWidth">30dp</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/margin_x3</item>
        <item name="android:paddingEnd">@dimen/margin_x3</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">@dimen/margin_main</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CoinDetails" />

    <style name="CoinDetails.Table" />

    <style name="CoinDetails.Table.Row">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="CoinDetails.Table.Key">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="CoinDetails.Table.Value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="VerificationInfoScreen" />

    <style name="VerificationInfoScreen.Key">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#58585A</item>
    </style>

    <style name="VerificationInfoScreen.Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">#d9d9d9</item>
    </style>

    <style name="VerificationBlankScreen" />

    <style name="VerificationBlankScreen.EditTextContainer" parent="@style/TextInputLayoutOutline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">16dp</item>

    </style>

    <style name="VerificationBlankScreen.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:lines">1</item>
    </style>

    <style name="BankAccountScreen" />

    <style name="BankAccountScreen.EditTextContainer" parent="@style/TextInputLayoutOutline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="BankAccountScreen.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:lines">1</item>
    </style>

    <style name="BankAccountScreen.CategoryContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


    <style name="TransactionsScreen.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundColor">@color/selector_bg_chips</item>
        <item name="android:textColor">@color/selector_text_chips</item>
    </style>

    <style name="TransactionsScreen.FloatingActionButtonChild" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimary</item>
        <item name="fab_size">mini</item>
    </style>

    <style name="TradeScreen.FloatingActionButtonChild" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPrimary</item>
        <item name="fab_size">normal</item>
    </style>

    <style name="Transaction" />

    <style name="Transaction.Title" />

    <style name="Transaction.Title.Medium" />

    <style name="Transaction.Title.Medium.Key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="Transaction.Title.Medium.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextInputLayoutOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="SettingsLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PrimaryTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/gph_white</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/gph_white</item>
    </style>

    <style name="SecondaryTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabBackground">@color/lighter_gray</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">#000</item>
        <item name="tabTextColor">#A3000000</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gph_white</item>
    </style>

    <style name="SliderWithoutSteps" parent="Base.Widget.MaterialComponents.Slider">
        <item name="tickColorActive">@android:color/transparent</item>
        <item name="tickColorInactive">@android:color/transparent</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="DialogTransparent" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>
