<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SettingsItemView">
        <attr name="src" format="reference" />
        <attr name="text" format="string" />
        <attr name="value" format="string" />
        <attr name="valueColor" format="reference" />
        <attr name="withChevron" format="boolean" />
        <attr name="withSwitch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WelcomeItemView">
        <attr name="welcomeItemSrc" format="reference" />
        <attr name="welcomeItemTitle" format="string" />
        <attr name="welcomeItemDescription" format="string" />
    </declare-styleable>

    <declare-styleable name="CoinInputLayout">
        <attr name="isMaxButtonVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragFromEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
    </declare-styleable>

</resources>