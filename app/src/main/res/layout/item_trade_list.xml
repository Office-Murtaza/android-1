<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/statusView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/userNameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/barrierView"
        app:layout_constraintStart_toEndOf="@id/statusView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="User name (3000+/100%/10km) " />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/paymentMethodView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_trade_payment_method"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/userNameView"
        app:layout_constraintTop_toBottomOf="@id/userNameView"
        tools:text="User bank" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tradeTypeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="#79bdff"
        android:backgroundTintMode="add"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/paymentMethodView"
        app:layout_constraintStart_toEndOf="@id/paymentMethodView"
        app:layout_constraintTop_toTopOf="@id/paymentMethodView"
        tools:ignore="SmallSp"
        tools:text="sell" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#48be53"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/priceLimitView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="125 000 usd" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/priceLimitView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/paymentMethodView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/paymentMethodView"
        tools:text="1000 - 10000 usd" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="priceView,priceLimitView" />

</androidx.constraintlayout.widget.ConstraintLayout>